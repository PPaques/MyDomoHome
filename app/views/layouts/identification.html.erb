    <%= stylesheet_link_tag :application %>
    <%= stylesheet_link_tag "base", :media => "all" %>
    <%= stylesheet_link_tag "base.responsive", :media => "all" %>
    <%= stylesheet_link_tag "authentification", :media => "all" %>
  </head>
  <body>
    <div id="identification-content">
      <i class="icon-cloud"></i>
      <h1>MyDomoHome</h1>

      <%= yield %>
      <footer><a href="http://www.ecam.be/">ECAM</a> - Année académique 2012-2013</footer>

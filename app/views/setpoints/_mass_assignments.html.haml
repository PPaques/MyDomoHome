-@rooms = Room.all
:javascript
  window.room_id = #{@rooms.collect { |obj| obj.id }}

#mass_assign.modal.fade.hide{:data => {:url => update_multiple_setpoints_url}}
  .modal-header
    = link_to 'âœ–', 'javascript:void(0)', :class => 'close', :"data-dismiss" => "modal"
    %h3

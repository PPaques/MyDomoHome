<div class="row-fluid">
			<div class="span6">
				<div class="widget">
					<div class="widget-header"><i class="icon-bookmark"></i><h3>État actuel</h3></div>
					<div class="widget-content">
						<% @home.rooms.each do |room| %>
							<div class="piece">
								<h4><%= room.name %></h4>
									<%= "<span class=\"consigne\">#{room.consigne}°C </span>".html_safe unless room.isoutside? %>
									<span class="temperature">
										<%= room.temperature %>°C 
										<%= '<i class="icon-caret-up"></i>'.html_safe if room.heating and !room.isoutside? %>
										<%= '<i class="icon-caret-down"></i>'.html_safe if !room.heating and !room.isoutside? %>
									</span>
								  <% if !room.isoutside? %>
										<div class="interrupteur">
											<input type="checkbox" <%= 'disabled="disabled"' if Home.first.mode_auto %> <%= 'checked="checked"' if room.heating %>  id="temp_'<%= room.id %>'" name="temp_'<%= room.id %>'" />
											<label for="temp_'<%= room.id %>'"></label>
										</div>
									<% end %>
							</div>
						<% end  %>

					</div>
				</div>
			</div>
			<div class="span6">
				<div class="widget">
					<div class="widget-header"><i class="icon-signal"></i><h3>Mesures récentes</h3></div>
					<% #http://railscasts.com/episodes/324-passing-data-to-javascript rails cast pour savoir comment passer des arguments rails vers le javascript d'une belle manière %>
					<div class="widget-content"><div id="placeholder" class="flot flot-width-full flot-height-300"></div></div>
				</div>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span4">
				<div class="widget-header"><i class="icon-signal"></i><h3>Temperature History</h3></div>
				<div class="widget-content">
						<% TemperatureMeasure.all.each do |temperature|	%>
							<p><%= temperature.created_at %> - <%= temperature.room.name %> - <%= temperature.temperature %> °C</p>
						<% end %>
				</div>
			</div>
			<div class="span4">
				<div class="widget-header"><i class="icon-signal"></i><h3>Opening History</h3></div>
				<div class="widget-content">
						<% OpeningMeasure.all.each do |opening_history|	%>
							<p><%= opening_history.created_at %> - <%= opening_history.opening.name %> - <%= opening_history.opened %></p>
						<% end %>

				</div>
			</div>
			<div class="span4">
				<div class="widget-header"><i class="icon-signal"></i><h3>Heating History</h3></div>
				<div class="widget-content">
					<% HeatingLog.all.each do |heating_log| %>
						<p><%= heating_log.created_at %> - <%= heating_log.room.name %> - <%= heating_log.heating %></p>
					<% end %>
				</div>
			</div>
		</div>

- model_class = Home
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:mode_auto)
      %th= model_class.human_attribute_name(:light_threeshold)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @homes.each do |home|
      %tr
        %td= link_to home.id, home_path(home)
        %td= home.mode_auto
        %td= home.light_threeshold
        %td=l home.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_home_path(home), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), home_path(home), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_home_path, :class => 'btn btn-primary'

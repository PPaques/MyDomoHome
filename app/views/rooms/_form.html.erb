<%= form_for @room, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :heating, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :heating, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :light, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :light, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :name, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :home_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :home_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rooms_path, :class => 'btn' %>
  </div>
<% end %>
